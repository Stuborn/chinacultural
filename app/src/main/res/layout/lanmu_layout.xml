<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <LinearLayout
        android:id="@+id/ti"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/fanhuiiconhei" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="更多"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ff666666"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ti"
        android:background="#DEDEDE"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:background="#fff"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="栏目切换"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_marginLeft="14dp"/>

        <Button
            android:id="@+id/btn_lanmu_mange"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:background="@drawable/guanlidingyuekuang"
            android:text="管理"
            android:textColor="#E60012"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_lanmu"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:background="@drawable/guanlidingyuekuang"
            android:text="完成"
            android:visibility="gone"
            android:textColor="#E60012"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:textSize="15sp" />
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:numColumns="4"
        android:layout_below="@+id/linearLayout4"
        android:background="#fff"
        android:id="@+id/gv_lanmu" />


    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gv_lanmu"
        android:background="#F6F6F6"
        android:orientation="horizontal"/>


    <TextView
        android:id="@+id/tv_rd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/ll_3"
        android:text="热点"
        android:textColor="#333"
        android:textSize="15sp"
        android:paddingLeft="14dp"/>

    <View
        android:id="@+id/view2"
        android:layout_below="@+id/tv_rd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE"
        />


    <ListView
        android:id="@+id/lv_dingyue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:layout_below="@+id/view2" />

    <View
        android:layout_below="@+id/lv_dingyue"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE"
        />
</RelativeLayout>