<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffe60012"/>

    <RelativeLayout
        android:id="@+id/ti"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_re"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="注册"
            android:textColor="#E60012"
            android:textSize="16sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ti"
        android:background="#DEDEDE"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="95dp"
        android:layout_height="116dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:src="@drawable/logo1"/>

    <LinearLayout
        android:id="@+id/shouji"
        android:layout_width="307dp"
        android:layout_height="28dp"
        android:layout_below="@id/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/shouji"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_marginLeft="11dp"
            android:background="#999"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="11dp"
            android:background="#fff"
            android:hint="请输入手机号码"
            android:textColor="#999"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="307dp"
        android:layout_height="1dp"
        android:layout_below="@+id/shouji"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#DEDEDE"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/mima"
        android:layout_width="307dp"
        android:layout_height="28dp"
        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/mima"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_marginLeft="11dp"
            android:background="#999"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="11dp"
            android:background="#fff"
            android:hint="请输入密码"
            android:textColor="#999"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="307dp"
        android:layout_height="1dp"
        android:layout_below="@+id/mima"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#DEDEDE"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/btn_index"
        android:layout_width="307dp"
        android:layout_height="43dp"
        android:layout_below="@id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:text="提 交"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/btn_index"
        android:layout_alignRight="@id/btn_index"
        android:layout_below="@id/btn_index"
        android:layout_marginTop="12dp"
        android:text="忘记密码？"
        android:textColor="#E60012"
        android:textSize="13sp"/>

    <LinearLayout
        android:id="@+id/other"
        android:layout_width="307dp"
        android:layout_height="20dp"
        android:layout_below="@id/tv_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="102dp"
            android:layout_height="1dp"
            android:src="@drawable/zuobiantiao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="其他登录方式"
            android:textColor="#999999"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="102dp"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/youbiantiao"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/other"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/qq1"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/qq1"
            android:layout_marginRight="50dp"/>

        <ImageButton
            android:id="@+id/wx1"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/weixin1"/>

        <ImageButton
            android:id="@+id/wb1"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/weibo1"/>
    </LinearLayout>

</RelativeLayout>