<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_p"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/img2"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_p"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:fontFamily="@font/noto_sans"
        android:text="#关押25年再审6年# 刘忠林故意杀人案改判无罪！"
        android:textColor="#333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_r"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="15.7dp"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/reicon" />

    <TextView
        android:id="@+id/tv_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_r"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/iv_r"
        android:layout_toRightOf="@+id/iv_r"
        android:text="新华网"
        android:textColor="#999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_a"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/tv_a"
        android:layout_toRightOf="@+id/tv_a"
        android:text="刚刚"
        android:textColor="#999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/iv_num"
        android:layout_width="44dp"
        android:layout_height="19dp"
        android:layout_above="@+id/title"
        android:layout_alignEnd="@+id/iv_p"
        android:layout_alignRight="@+id/iv_p"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/tu"
        android:text="8图"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="10sp" />

</RelativeLayout>