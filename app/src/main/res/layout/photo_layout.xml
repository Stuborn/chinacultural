<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1b1b1b">

    <LinearLayout
        android:id="@+id/ti"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/fanhuiiconbai2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:text="中国文化"
            android:textColor="#ff666666"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="19dp"
            android:layout_height="3dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/gengduofenxiang2iconbai" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img4"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全国人大会议开幕 李克强作政府工作报告"
        android:textColor="#ffffffff"
        android:textSize="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/tv_wtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp"
        android:textColor="#A0A0A0"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:text="中国新闻网   2分钟前" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_wtime"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:textColor="#E60012"
        android:textSize="12sp"
        android:text="1" />

    <TextView
        android:id="@+id/tv_tol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_num"
        android:layout_alignBottom="@+id/tv_num"
        android:layout_alignLeft="@+id/tv_num"
        android:layout_alignStart="@+id/tv_num"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="7dp"
        android:textSize="12sp"
        android:textColor="#A0A0A0"
        android:text="/4" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="十二届全国人大五次会议3月5日上午9时在人民时在人民大会堂开幕，国务院总理李克强作政府工作报告。"
        android:textColor="#ffa0a0a0"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_wtime"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#111">
        <LinearLayout
            android:id="@+id/plk"
            android:layout_width="283dp"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/kuang">

            <ImageView
                android:id="@+id/plimg"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@drawable/bianjiicon_tuji"
                android:layout_marginLeft="11dp"/>

            <TextView
                android:id="@+id/tv_pl"
                android:layout_width="203dp"
                android:layout_height="30dp"
                android:layout_marginLeft="9dp"
                android:text="写评论..."
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:background="#1F1F1F"
                android:textColor="#626262"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/biaoqingicon_tuji"
                android:layout_marginLeft="9dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/pinglun"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:src="@drawable/pinglunicon_tuji"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>

</RelativeLayout>