<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
        <TextView
            android:id="@+id/biaoqian"
            android:layout_width="68dp"
            android:layout_height="33dp"
            android:text="头条"
            android:gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/lanmukuang" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/biaoqian"
            android:layout_alignLeft="@+id/biaoqian"
            android:layout_alignStart="@+id/biaoqian"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:visibility="gone"
            app:srcCompat="@drawable/shanchuicon" />
</RelativeLayout>