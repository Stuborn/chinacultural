<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/ti"
        android:layout_width="360dp"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_in"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登录"
            android:textColor="#E60012"
            android:textSize="16sp"
            android:background="#fff"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ti"
        android:background="#DEDEDE"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="95dp"
        android:layout_height="116dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:src="@drawable/logo1" />

    <LinearLayout
        android:id="@+id/shouji"
        android:layout_width="307dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo1"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:src="@drawable/shouji"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#999"
            android:layout_marginLeft="11dp"/>
        <EditText
            android:id="@+id/et_sj"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#fff"
            android:textSize="14sp"
            android:textColor="#999"
            android:layout_marginLeft="11dp"
            android:hint="请输入手机号码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="307dp"
        android:layout_height="1dp"
        android:layout_below="@+id/shouji"
        android:background="#DEDEDE"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/yanzheng"
        android:layout_width="307dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:src="@drawable/yanzhengma"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#999"
            android:layout_marginLeft="11dp"/>
        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:background="#fff"
            android:textSize="14sp"
            android:textColor="#999"
            android:layout_marginLeft="11dp"
            android:hint="请输入验证码" />
        <Button
            android:id="@+id/btn_yanzheng"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:background="@drawable/guanlidingyuekuang"
            android:textColor="#333"
            android:textSize="10sp"
            android:text="获取验证码"
            android:layout_marginLeft="36dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="307dp"
        android:layout_height="1dp"
        android:layout_below="@+id/yanzheng"
        android:background="#DEDEDE"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/mima"
        android:layout_width="307dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout3"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:src="@drawable/mima"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#999"
            android:layout_marginLeft="11dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#fff"
            android:textSize="14sp"
            android:textColor="#999"
            android:layout_marginLeft="11dp"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="307dp"
        android:layout_height="1dp"
        android:layout_below="@+id/mima"
        android:background="#DEDEDE"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="307dp"
        android:layout_height="43dp"
        android:layout_below="@id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:layout_marginTop="39dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="注 册"/>
</RelativeLayout>