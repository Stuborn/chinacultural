<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/top_title"/>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="141dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:src="@drawable/jifen"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="19dp"
                android:layout_height="21dp"
                android:src="@drawable/jifen_icon"/>
            <TextView
                android:layout_width="87dp"
                android:layout_height="38dp"
                android:text="2680"
                android:textSize="35dp"
                android:textColor="#FEFEFE"/>

        </LinearLayout>
        <ImageView
            android:layout_marginTop="9dp"
            android:layout_width="159dp"
            android:layout_height="37dp"
            android:src="@drawable/qiandaojifen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="66dp"
        >
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="27dp"
                android:src="@drawable/qiandao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="快速签到"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="27dp"
                android:src="@drawable/duihuan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="兑换记录"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="66dp"
        android:background="#ffdedede"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_marginLeft="13dp"
            android:layout_width="75dp"
            android:layout_height="21dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="兑换记录"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:gravity="right|center_vertical">
            <TextView
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_marginLeft="13dp"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:text="更多"
                />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:src="@drawable/gengduo_icon"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="216dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_width="110dp"
            android:layout_height="210dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="104dp"
                android:layout_height="118dp"
                android:src="@drawable/t1"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="93dp"
                android:layout_height="15dp"
                android:text="艺术市场 3月刊"
                android:textColor="#333333"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:text="800积分"
                android:textColor="#ffe60012"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bg"
                android:text="立即兑换"
                android:textColor="#ffe60012"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_width="110dp"
            android:layout_height="210dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="104dp"
                android:layout_height="118dp"
                android:src="@drawable/t2"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="93dp"
                android:layout_height="15dp"
                android:text="中国文化报"
                android:textColor="#333333"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:text="650积分"
                android:textColor="#ffe60012"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bg"
                android:text="立即兑换"
                android:textColor="#ffe60012"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_width="110dp"
            android:layout_height="210dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="104dp"
                android:layout_height="118dp"
                android:src="@drawable/t3"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="93dp"
                android:layout_height="15dp"
                android:text="艺术市场 8月刊"
                android:textColor="#333333"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:text="750积分"
                android:textColor="#ffe60012"/>
            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bg"
                android:text="立即兑换"
                android:textColor="#ffe60012"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>