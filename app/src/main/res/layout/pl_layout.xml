<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ti"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/fanhuiiconhei" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:text="评论"
            android:textColor="#ff666666"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ti"
        android:background="#DEDEDE"
        android:orientation="horizontal" />

    <ListView
        android:id="@+id/lv_pl"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"/>

    <ImageView
        android:id="@+id/fragment_order_new_empty_view"
        android:layout_width="109dp"
        android:layout_height="88dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="252dp"
        android:src="@drawable/kongpinlun"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lv_pl"
        android:background="#DEDEDE"
        android:orientation="horizontal"
        android:layout_alignTop="@id/plbottm"/>

    <LinearLayout
        android:id="@+id/plbottm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/plk"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/pinglunkuang_chang">

            <ImageView
                android:id="@+id/plimg"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@drawable/bianjiicon"
                android:layout_marginLeft="11dp"/>

            <TextView
                android:layout_width="253dp"
                android:layout_height="31dp"
                android:layout_marginLeft="9dp"
                android:textSize="13sp"
                android:background="#F6F6F6"
                android:text="写评论..."
                android:gravity="center_vertical"
                android:textColor="#999"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/biaoqingicon"
                android:layout_marginLeft="9dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>