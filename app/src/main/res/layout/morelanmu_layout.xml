<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ti"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/fanhuiiconhei" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:text="栏目"
            android:textColor="#ff666666"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ti"
        android:orientation="horizontal"
        android:id="@+id/linearLayout5">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="275dp"
            android:layout_height="31dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:background="#fff"
            android:selectAllOnFocus="false">

            <ImageView
                android:id="@+id/find_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:src="@drawable/soushuoicon" />

            <EditText
                android:id="@+id/et_find"
                android:layout_width="235dp"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/find_img"
                android:layout_toRightOf="@+id/find_img"
                android:background="#ffffff"
                android:hint="搜索"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <ListView
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout5"
        android:id="@+id/lv_lanmuitem"
        android:background="#F6F6F6"/>

    <ListView
        android:id="@+id/lv_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout5"
        android:layout_toEndOf="@+id/lv_lanmuitem"
        android:layout_toRightOf="@+id/lv_lanmuitem"
        android:background="#fff"/>
</RelativeLayout>