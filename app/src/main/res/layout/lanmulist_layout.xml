<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/iv_lanmuicon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lanmuredian"
        android:layout_marginLeft="13dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_lanmuicon"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/iv_lanmuicon"
        android:text="文化北京"
        android:textColor="#333"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_dingyue"
        android:layout_width="52dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:background="@drawable/guanlidingyuekuang"
        android:text="订阅"
        android:textColor="#E60012"
        android:textSize="15sp" />
</RelativeLayout>