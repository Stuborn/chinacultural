<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">#333</item>
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark"></item>
        <item name="actionMenuTextColor">#333</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>
    <style name="AcBar_titleStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#333</item>
    </style>
    <style name="AppTheme.AppBarOverlay">
        <item name="colorControlNormal">#333</item>
        <item name="android:actionBarSize">46dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">#333</item>
        <item name="android:actionBarSize">46dp</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
    </style>
    <!-- toolbar 文本 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <!-- toolbar 文本 -->
    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#333</item>
    </style>

</resources>
